<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.youngsun.mysololife">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 갤러리에서 이미지를 가져오기 위해 권한 추가. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySoloLife">
        <activity
            android:name=".board.BoardShowActivity"
            android:exported="false" />
        <activity
            android:name=".board.BoardWriteActivity"
            android:exported="false" />
        <activity
            android:name=".contentsList.ContentShowActivity"
            android:exported="false" />
        <activity
            android:name=".contentsList.ContentsListActivity"
            android:exported="false" />
        <activity
            android:name=".auth.JoinActivity"
            android:exported="false" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".auth.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">

            <!-- Splash 화면을 시작 화면으로 지정 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>